<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Label?>

<VBox id="wrapper" prefHeight="720" prefWidth="1280"
	xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="nl.tudelft.lifetiles.core.controller.MainController">

	<AnchorPane prefHeight="39.0" id="window_controls">
		<children>
			<fx:include fx:id="menuContent" source="MenuView.fxml" />
			<fx:include fx:id="windowControlContent" source="WindowControlView.fxml" />
		</children>
	</AnchorPane>

	<GridPane prefHeight="692.0" prefWidth="1280.0" fx:id="mainGrid">
		<columnConstraints>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
				prefWidth="100.0" />
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
				prefWidth="100.0" />
		</columnConstraints>
		<rowConstraints>
			<RowConstraints maxHeight="656.0" minHeight="10.0"
				prefHeight="346.0" vgrow="SOMETIMES" />
			<RowConstraints maxHeight="353.0" minHeight="10.0"
				prefHeight="346.0" vgrow="SOMETIMES" />
		</rowConstraints>
		<children>
			<fx:include fx:id="sequenceContent" source="SequenceView.fxml"
				GridPane.columnIndex="0" GridPane.rowIndex="1" />
			<fx:include fx:id="treeContent" source="TreeView.fxml"
				GridPane.columnIndex="1" GridPane.rowIndex="1" />
			<fx:include fx:id="graphContent" source="GraphView.fxml"
				GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" />
		</children>
	</GridPane>

	<HBox fx:id="splashPane" prefHeight="692.0" prefWidth="1280.0"
		alignment="CENTER">
		<children>
			<Label text="Graph not loaded yet." />
		</children>
	</HBox>

	<stylesheets>
		<URL value="@../styles/MainStyle.css" />
	</stylesheets>
</VBox>
