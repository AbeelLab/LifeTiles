	<menus>
		<Menu text="" id="logo" />
		<Menu text="File">
			<items>
				<MenuItem text="Open" onAction="#openAction" />
				<MenuItem text="Insert Annotations" />
			</items>
		</Menu>
		<Menu text="View">
		</Menu>
		<Menu text="Filter">
			<items>
				<MenuItem text="Reset Filter" onAction="#resetAction"  />
			</items>
		</Menu>
		<Menu text="Configuration">
		</Menu>
